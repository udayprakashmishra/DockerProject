pipeline {
  agent any
  stages {
    
      stage('Build Application') {
            steps {
            echo "Started"
               bat 'mvn -f pom.xml clean package'
                echo "Ended"
            }
            post {
                success {
                    echo "Now Archiving the Artifacts...."
                    archiveArtifacts artifacts: '**/*.war'
                }
            }
        }
        
       stage('Docker'){
       steps{
       bat 'docker build -t t:100 -f tomcatsamplewebapp:100 ./Dockerfile.txt .'
       }
       }
        
  }
}
